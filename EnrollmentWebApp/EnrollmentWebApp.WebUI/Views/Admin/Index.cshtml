@model IEnumerable<EnrollmentWebApp.Domain.Entities.Enrollee>

@{
    ViewBag.Title = "Admin: All Enrollees";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Enrollees</h3>
    </div>
    <div class="panel-body">
        <ul class="Container" id="tree">
            <li class="Node IsRoot IsLast ExpandClosed" id="0">
                <div class="Expand"></div>
                <div class="Content">Дерево</div>
                <ul class="Container"></ul>
            </li>
        </ul>
        <div><select id="facultySelect" class="form-control myown"></select></div>
        <div><select id="specialitySelect" class="form-control myown"></select></div>
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Surname</th>
                <th class="text-right">Name</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.EnrolleeId</td>
                    <td>@Html.ActionLink(item.Surname, "Edit", new { item.EnrolleeId })</td>
                    <td class="text-right">@item.Name</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("EnrolleeId", item.EnrolleeId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />   
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new enrollee", "Create", null,
        new { @class = "btn btn-default" })
    </div>
</div>

